<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="38dp"
            android:text="새 프로젝트"
            android:textColor="#444444"
            android:textStyle="bold" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            android:textColor="#444444"
            android:text="제목"
            android:textStyle="bold" />

        <EditText
            android:layout_width="336dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:gravity="top"
            android:background="#eeeeee" />

        <TextView
            android:layout_width="78dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            android:text="한줄 소개말"
            android:textColor="#444444"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:layout_width="336dp"
            android:layout_height="148dp"
            android:layout_marginTop="13dp"
            android:background="#eeeeee"
            android:gravity="top"
            android:layout_gravity="center"
            />
        
        <TextView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="20dp"
            android:text="목적"
            android:textColor="#444444"
            android:textStyle="bold"
            />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:columnCount="2"
        android:rowCount="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_startup_btn"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="13dp"
            android:text="창업"/>

        <Button
            android:id="@+id/create_competition_btn"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="13dp"
            android:text="공모전 참여"/>

        <Button
            android:text="스터디"
            android:id="@+id/create_study_btn"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="13dp"
            />

        <Button
            android:id="@+id/create_side_btn"
            android:text="사이드 프로젝트"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            />

        <Button
            android:id="@+id/create_create_btn"
            android:text="창작"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="13dp"
            />

        <Button
            android:id="@+id/create_etc_btn"
            android:text="기타"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            />


    </GridLayout>

    <TextView
        android:layout_width="28dp"
        android:layout_height="19dp"
        android:text="분야"
        android:textColor="#444444"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_chain_btn"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/selector"
            android:text="블록체인"/>
        <Button
            android:id="@+id/create_iot_btn"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="13dp"
            android:text="IoT"/>

        <Button
            android:id="@+id/create_ai_btn"
            android:text="인공지능 AI"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/selector"
            />
        <Button
            android:id="@+id/create_design_btn"
            android:text="디자인"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="13dp"
            />

        <Button
            android:id="@+id/create_contents_btn"
            android:text="컨텐츠"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="13dp"
            />

        <Button
            android:id="@+id/create_subjectetc_btn"
            android:text="기타"
            android:layout_width="163dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="13dp"
            />
    </GridLayout>

    <TextView
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:text="지역"
        android:textColor="#444444"
        android:textStyle="bold"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="20dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:columnCount="2"
        android:rowCount="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_seoul_btn"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/selector"
            android:text="서울"/>
        <Button
            android:id="@+id/create_gyeonggi_btn"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="13dp"
            android:text="경기"/>

        <Button
            android:id="@+id/create_incheon_btn"
            android:text="인천"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/selector"
            />
        <Button
            android:id="@+id/create_gangwon_btn"
            android:text="강원"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="13dp"
            />

        <Button
            android:id="@+id/create_chungcheong_btn"
            android:text="충청도"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/selector"
            />
        <Button
            android:id="@+id/create_jeolla_btn"
            android:text="전라도"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="13dp"
            />

        <Button
            android:id="@+id/create_gyeongsang_btn"
            android:text="경상도"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/selector"
            />
        <Button
            android:id="@+id/create_jeju_btn"
            android:text="제주"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="13dp"
            />

    </GridLayout>

    <Button
        android:id="@+id/create_next_btn"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/create_select_btn"
        android:layout_gravity="center"
        />

    </LinearLayout>
</ScrollView>