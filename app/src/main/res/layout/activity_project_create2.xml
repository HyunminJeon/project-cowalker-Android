<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProjectCreate2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="새 프로젝트"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="52dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="프로젝트 이미지"
        android:textSize="16sp"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="200dp" >

           <LinearLayout
               android:id="@+id/create_project2_layout"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginTop="16dp"
               android:orientation="horizontal">
          </LinearLayout>

        </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="프로젝트 소개"
        android:textSize="16sp"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="336dp"
        android:layout_height="327dp"
        android:background="@color/colorAccent"
        android:hint="팀소개, 주요업무, 자격요건, 팀빌딩 절차, 문의처, 상세정보"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="40dp"
        android:textSize="16sp"
        android:gravity="top"
        android:layout_marginTop="13dp"
        android:layout_gravity="center"/>

    
    <Button
        android:id="@+id/create2_confirm_btn"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:background="@drawable/complete_selector"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"/>

    </LinearLayout>

</ScrollView>